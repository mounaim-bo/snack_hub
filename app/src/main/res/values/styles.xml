<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="ContactButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:fontFamily">@font/tagesschrift_regular</item>
    </style>
</resources>