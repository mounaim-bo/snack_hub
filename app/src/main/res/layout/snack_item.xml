<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image du snack avec coins arrondis -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/snackImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/images3"
                tools:src="@drawable/images3" />

        </androidx.cardview.widget.CardView>

        <!-- Contenu textuel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Nom du snack -->
            <TextView
                android:id="@+id/snackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom du Snack"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C2C2C"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Snack DÃ©licieux" />

            <!-- Description -->
            <TextView
                android:id="@+id/snackDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Description du snack..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="DÃ©licieux snacks et boissons fraÃ®ches dans un cadre convivial" />

            <!-- TÃ©lÃ©phone avec icÃ´ne simple -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/snackPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 12 34 56 78"
                    android:textSize="14sp"
                    android:textColor="#FF9800"
                    android:fontFamily="sans-serif-medium"
                    tools:text="06 12 34 56 78" />

            </LinearLayout>

            <!-- Adresse avec icÃ´ne simple -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/snackAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adresse du snack"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="123 Rue de la Paix, Casablanca" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>