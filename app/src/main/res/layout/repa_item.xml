<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="#000">

        <!-- L'image du repas -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="45dp"
            android:src="@drawable/food1" />

        <!-- Le nom du repas en dessous -->
        <TextView
            android:id="@+id/mealName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Nom Repas"
            android:fontFamily="@font/tagesschrift_regular"
            android:textColor="#282421"
            android:background="@drawable/nom_repas_bg"
            android:padding="8dp" />

        <!-- Le cercle du prix (positionné en haut à droite) -->
        <TextView
            android:id="@+id/mealPrice"
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/cerlce"
            android:fontFamily="@font/tagesschrift_regular"
            android:gravity="center"
            android:text="65Dhs"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.cardview.widget.CardView>